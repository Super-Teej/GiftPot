<div class= "limiter">
  <div class= "container-newpot">
    <div class= "wrap-newpot">
      <div class= "newpot-form">
        <span class= "newpot-form-title p-b-66">
          Create New Pot
        </span>
        <div>
          <%= simple_form_for(@pot)do |f| %>
            <%= f.input :name, label: "Pot's name", placeholder: "ArdiÂ´s new Laptop", input_html: { autocomplete: "off"} %>
            <%= f.input :end_date, as: :string, placeholder: "DD/MM/YYYY", label: "when?".html_safe, input_html: { class: "datepicker" } %>
            <%= f.input :description, label: "Description:", placeholder: "His laptop is broken and he needs a new laptop", input_html: { autocomplete: "off"} %>
