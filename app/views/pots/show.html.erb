<div class="container text-center my-3">
  <div class="d-flex justify-content-between">
  <% if @pot.owner == current_user %>
    <%= link_to '<i class="fas fa-arrow-left fa-1x" style="color:black"></i>'.html_safe, dashboard_path  %>
    <%= link_to '<i class="far fa-window-close fa-1x" style="color:black"></i>'.html_safe, finish_pot_path(@pot), data:{confirm: "Are you sure you whant to finish the pot FOREVER üò•??"} %>
  <% else %>
    <%= link_to '<i class="fas fa-arrow-left" style="color:black"></i>'.html_safe, dashboard_path  %>
  <% end %>
  </div>
  <div class="card p-2 bgt">
  <h2><%= @pot.name.capitalize %></h2>

<%#= CHECKING IF OWNER/MEMBER/NON-MEMBER AND DISPLAYING LINK TO SHARE OR JOIN ACCORDINGLY %>
  <% if @pot.owner == current_user %>
    <div class="btn-inv">
      <%= link_to "share this page", "whatsapp://send?text=Hello%2C%20World!%20#{request.original_url}" %>
    </div>
  <% elsif (@pot.users_pots.where user_id:(current_user)).exists? %>
    <div class="btn-inv">
      <%= link_to "share this page", "whatsapp://send?text=Hello%2C%20World!%20#{request.original_url}" %>
    </div>
  <% else %>
    <div class="btn-inv-strong">
      <%= link_to "JOIN THIS POT", join_path(@pot), method: :post %>
    </div>
  <% end %>

    <% if @pot.active == false %>
      <div class="card p-2 bgp">
        <h6><%= @pot.description %></h6>
        <h3> Gift Date ‚ûº <%= @pot.end_date.strftime("%d %b %Y") %></h3>
        <h2> Total raised: <strong><%= @pot.total_amount/100 %>‚Ç¨</strong></h2>
      </div>
      <div class="card p-2 mt-2 pink">
        <% if @winner_gift != nil %>
          <h3> The winning gift üéÅ</h3>
          <h2> <strong><%= @winner_gift.name %></strong> with <strong><%= @winner_gift.votes %></strong> votes.</h2>
        <% else %>
          <h2> NO GIFTS üò•</h2>
        <% end %>
      </div>
      <div class="container mt-2">
        <%= link_to '<i class="far fa-comments fa-2x" style="color:white"></i>'.html_safe, chatroom_path(@pot.chatroom.id), class: "btn-sqr bgy" %>
      </div>
    <% else %>
      <div class="card p-2">
        <h6><%= @pot.description %></h6>
        <% if @pot.days_remaining == 0 %>
          <h3> Today is the Event day </h3>
        <% elsif @pot.days_remaining > 0 %>
          <h6>Date: <%= @pot.end_date.strftime("%d %b %Y")%> ‚ûº <strong><%= @pot.days_remaining %> Days left</strong> </h6>
        <% end %>
        <h2><strong> ‚Ç¨<%= @pot.total_amount/100 %> raised </strong><h2>
        <% unless Contribution.where(user: current_user, pot: @pot).exists? %>
          <div class="pt-2 pb-2"><%= link_to '<i class="fas fa-hand-holding-usd fa-2x" style="color:#1EDD88"></i>'.html_safe, new_pot_contribution_path(@pot) %></div>
        <% else %>
          <h3><strong>‚Ç¨<%= @contribution.amount_cents/100 %> contributed by <%= @user.first_name %></strong><h3>
        <% end %>
      </div>
      <div class= "card-pot px-2 py-1 card-pot-enpty">
          <% @ordered_gifts.each do |gift| %>
            <ul>
              <li class="d-flex justify-content-between align-items-center mt-1">
                <span class="badge badge-primary badge-pill">Votes: <%= gift.votes %></span>
                <%= gift.name.capitalize %> - ‚Ç¨<%= gift.price %>
                <% if @pot.owner == current_user %>
                <%= link_to '<i class="fas fa-trash" style="color:#D20E85"></i>'.html_safe, gift_path(gift), method: :delete %>
                <% end %>
              </li>
            </ul>
          <% end %>
        </div>
      <% if @pot.owner == current_user %>


      <%= render 'shared/carousell' %>
        <div class="container mt-2 d-flex justify-content-between mt-3">
          <%= link_to'<i class="far fa-comments fa-2x" style="color:white"></i>'.html_safe, chatroom_path(@pot.chatroom.id), class: "btn-sqr bgp" %>
          <p>
            <a class="btn-sqr bgp" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
              <i class="fas fa-gift fa-2x" style="color:white"></i>
            </a>
          </p>
          <div class="collapse" id="collapseExample">
          <%= render 'shared/gift_form' %>
          <div>
        </div>
      </div>
        <% else %>
          <%= render 'shared/carousell' %>
          <div class="container mt-2 d-flex justify-content-around">
            <%= link_to '<i class="fas fa-sign-out-alt fa-2x" style="color:white"></i>'.html_safe, leave_path(@pot), class: "btn-sqr bgp", data:{confirm: "üèÉ‚Äç‚ôÄÔ∏èüèÉ‚Äç‚ôÇÔ∏è Are you sure you whant to leave the pot FOREVER?? üèÉ‚Äç‚ôÄÔ∏èüèÉ‚Äç‚ôÇÔ∏è"} %>
            <%= link_to '<i class="far fa-comments fa-2x" style="color:white"></i>'.html_safe, chatroom_path(@pot.chatroom.id), class: "btn-sqr bgp" %>
          </div>
        <% end %>
    <% end %>
  </div>
</div>
